@model  DataLibrary.Database.Contact
@{
    ViewBag.Title = "Chi tiết liên hệ";

    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdmin.cshtml";
}
@section styles
{

    <!-- DataTables -->
    @*<link rel="stylesheet" href="~/Assets/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">*@
    <link href="~/Scripts/jquery-ui-1.11.0/jquery-ui.css" rel="stylesheet" />
    <link href="~/Scripts/jtable/themes/metro/lightgray/jtable.min.css" rel="stylesheet" />
    <link href="~/Scripts/jtable/themes/jqueryui/jtable_jqueryui.css" rel="stylesheet" />
    <style>
        #detail-lh div {
            border: 1px solid #ddd;
            margin: 0px;
            border-bottom: none;
            display: block;
            width: 100%;
            float: left;
        }

            #detail-lh div:last-child {
                border-bottom: 1px solid #ddd;
            }

            #detail-lh div p {
                width: 69%;
                float: right;
                border-left: 1px solid #ddd;
                padding: 10px 10px;
                margin: 0px;
            }

            #detail-lh div label {
                width: 28%;
                text-align: right;
                height: 100%;
                display: block;
                float: left;
                font-weight: bold;
                line-height: 32px;
            }
    </style>

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    <h3>Chi tiết liên hệ</h3>
                    <a href="@Url.Action("Index","Contact")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>

                </h3>
            </div>
            <div class="card-body pad table-responsive">
                <div class="widget-content">
                    <div id="detail-lh">
                        <div>
                            <label>FirstName</label> <p>@Model.FirstName</p>
                        </div>
                        <div>
                            <label>LastName</label> <p>@Model.LastName</p>
                        </div>

                        <div>
                            <label>Số điện thoại </label> <p>@Model.Phone</p>
                        </div>

                        <div>
                            <label>Địa chỉ email </label> <p>@Model.Email</p>
                        </div>

                        <div>
                            <label>Ngày liên hệ </label> <p>@Model.CreateDate.ToLongDateString()</p>
                        </div>
                        <div>
                            <label>Lời nhắn </label> <p>@Model.Message</p>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.col -->
</div>

 

@section scripts
{
   
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.9.2.js"></script>
    <script src="~/Scripts/jtable/jquery.jtable.js"></script>


}

